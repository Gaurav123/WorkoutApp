<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <TextView
            android:textColor="@color/pinkaccent"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_margin="10dp"
            android:text="WEIGHT LOOSE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"

        >
        <Button
            android:id="@+id/weightloose"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@drawable/loosebtn"
            android:alpha="0.7"
           />


        />
    </RelativeLayout>
    <TextView
        android:textColor="@color/pinkaccent"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_margin="10dp"
        android:text="WEIGHT GAIN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/weightgain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:background="@drawable/gainbtn"

        />

</LinearLayout>